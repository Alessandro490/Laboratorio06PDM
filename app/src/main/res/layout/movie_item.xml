<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/MovieItemCardVoew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mediumGap"
        android:backgroundTint="@color/cardLayout"
        app:cardCornerRadius="@dimen/mediumGap"
        app:cardMaxElevation="@dimen/mediumGap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/ItemViewGao"
                android:layout_height="@dimen/ItemViewGao"
                android:layout_margin="@dimen/smallGap"
                android:src="@drawable/image_not_available"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/smallGap"
                >
                
                <TextView
                    android:id="@+id/TitleMovieItemTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mediumGap"
                    android:layout_marginEnd="@dimen/mediumGap"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/movie_item_title_text_view"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mediumTextGap"
                    />
                
                <TextView
                    android:id="@+id/QualificationMovieItemTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/movie_item_quaification_text_view"
                    android:textColor="@color/calification"
                    android:textSize="@dimen/largeTextGap"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </LinearLayout>
        
    </androidx.cardview.widget.CardView>    

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>